<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.clickImageCss {
		cursor: pointer;
		margin: 0.5em;
		width: 8em;
	}
	
	.descLabelCss {
		text-align: center;
		font-size: large;
		color: rgb(0, 3, 255);
		font-weight: bolder;
		font-family: sans-serif;
		margin: 1em;
	}
	</ui:style>
	<g:VerticalPanel width="800px" horizontalAlignment="ALIGN_CENTER">
		<g:HTML ui:field="headerLabel"></g:HTML>
		<g:HTML ui:field="descLabel" styleName="{style.descLabelCss}" />
		<g:VerticalPanel ui:field="containerView" width="100%"
			horizontalAlignment="ALIGN_CENTER" />
		
	</g:VerticalPanel>
</ui:UiBinder> 