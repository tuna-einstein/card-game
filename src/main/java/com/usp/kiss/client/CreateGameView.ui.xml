<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.imageFocus {
		cursor: pointer;
		margin-left: 1em;
	}
	
	.textBox {
		margin-left: 2em;
		margin-right: 2em;
	}
	
	.label {
	font-size: medium;
	font-weight: bold;

	}
	</ui:style>

	<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER ">
		<g:HTMLPanel>
			<H1>Create a new game</H1>
		</g:HTMLPanel>
		<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE"
			height="3em">
			<g:Label styleName="{style.label}">Num. of players : </g:Label>
			<g:TextBox ui:field="playerCount" width="3em" focus="true"
				styleName="{style.textBox}">
				5
			</g:TextBox>
			<g:Image url="proceed.png" ui:field="proceed" height="1.5em"
				styleName="{style.imageFocus}"></g:Image>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 